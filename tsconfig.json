{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@appRoot/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["build", "node_modules"]
}